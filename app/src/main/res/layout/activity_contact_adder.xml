        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Ramazan B."
        app:layout_constraintEnd_toStartOf="@+id/day5ToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/day4NameText" />

    <TextView
        android:id="@+id/day6NameText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Kurban B."
        app:layout_constraintEnd_toStartOf="@+id/day6ToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/day5NameText" />

    <TextView
        android:id="@+id/day7NameText"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="day7"
        app:layout_constraintEnd_toStartOf="@+id/day7ToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/day6NameText" />

    <ToggleButton
        android:id="@+id/day5ToggleButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/day5NameText" />

    <ToggleButton
        android:id="@+id/day4ToggleButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
